{
  "manifest_version": 3,
  "name": "Extention for Crawling",
  "version": "0.1.0",
  "description": "Build an Extension!",
  "icons": {
    "16": "/public/icons/logo_s.png",
    "32": "/public/icons/logo_s.png",
    "48": "/public/icons/logo_s.png",
    "128": "/public/icons/logo_s.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "searchCrwaling",
    "default_popup": "public/popup.html",
    "default_icon": "icons/logo_s.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "*://*.sellha.kr/realtimemonitoring",
    "http://localhost/realtimemonitoring",
    "*://*.naver.com/*",
    "*://*.sellha.kr/productname",
    "http://localhost/productname"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.sellha.kr/realtimemonitoring",
        "http://localhost/realtimemonitoring",
        "*://*.sellha.kr/productname",
        "http://localhost/productname"
      ],
      "run_at": "document_idle",
      "js": ["src/contentScripts.js"]
    }
  ]
}
