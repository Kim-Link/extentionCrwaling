{
  "manifest_version": 2,
  "name": "Extention for Crawling",
  "version": "0.1.0",
  "description": "Build an Extension!",
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "searchCrwaling",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "*://*/realtimemonitoring"],
  "content_scripts": [
    {
      "matches": ["*://*/realtimemonitoring"],
      "run_at": "document_end",
      "js": ["search.js"]
    }
  ]
}
