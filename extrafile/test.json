{
  "manifest_version": 2,
  "name": "Sellha",
  "version": "0.1.0",
  "description": "Sellha Chrome Extension",
  "icons": {
    "16": "icons/logo_s.png",
    "32": "icons/logo_s.png",
    "48": "icons/logo_s.png",
    "128": "icons/logo_s.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Sellha",
    "default_popup": "popup.html",
    "default_icon": "icons/logo_s.png"
  },
  "permissions": ["storage", "*://*/realtimemonitoring"],
  "content_scripts": [
    {
      "matches": ["*://*/realtimemonitoring"],
      "run_at": "document_end",
      "js": ["contentScript.js"]
    }
  ],
  "content_security_policy": "script-src 'self’ ‘unsafe-eval'; object-src 'self'"
}
